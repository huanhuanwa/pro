import { Subject } from 'rxjs';
import { ApplicationRef, ComponentFactoryResolver, Injector } from '@angular/core';
import { ThyNotifyOptions } from './notify-option.interface';
import { NotifyQueueStore } from './notify-queue.store';
export declare class ThyNotifyService {
    private injector;
    private componentFactoryResolver;
    private appRef;
    private queueStore;
    private defaultConfig;
    notifyQueue$: Subject<any>;
    private _lastNotifyId;
    private containerRefTopRight;
    private containerRefBottomRight;
    private containerRefBottomLeft;
    private containerRefTopLeft;
    constructor(injector: Injector, componentFactoryResolver: ComponentFactoryResolver, appRef: ApplicationRef, queueStore: NotifyQueueStore, defaultConfig: ThyNotifyOptions);
    show(options: ThyNotifyOptions): void;
    success(title?: string, content?: string, options?: ThyNotifyOptions): void;
    info(title?: string, content?: string, options?: ThyNotifyOptions): void;
    warning(title?: string, content?: string, options?: ThyNotifyOptions): void;
    error(title?: string, content?: string, options?: ThyNotifyOptions | string): void;
    removeNotifyById(id: number): void;
    private _initContainer;
    private _loadNotifyContainerComponent;
    private formatOptions;
}
