import { ElementRef, Renderer2, NgZone, EventEmitter } from '@angular/core';
import { ThyUploaderConfig } from './uploader.config';
import { ThyFileSelectEvent, ThySizeExceedsHandler } from './types';
export declare class FileSelectBaseComponent {
    elementRef: ElementRef;
    defaultConfig: ThyUploaderConfig;
    renderer?: Renderer2;
    ngZone?: NgZone;
    acceptType: string;
    sizeThreshold: number;
    sizeExceedsHandler: ThySizeExceedsHandler;
    set thySizeThreshold(value: number);
    set thySizeExceedsHandler(value: ThySizeExceedsHandler);
    constructor(elementRef: ElementRef, defaultConfig: ThyUploaderConfig, renderer?: Renderer2, ngZone?: NgZone);
    handleSizeExceeds(event: Event, files: File[]): void | File[];
    selectFiles(event: Event, files: File[], eventEmitter: EventEmitter<ThyFileSelectEvent>): void;
}
