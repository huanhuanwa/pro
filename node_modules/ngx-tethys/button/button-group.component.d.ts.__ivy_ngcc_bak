import { ElementRef, OnInit } from '@angular/core';
import { UpdateHostClassService } from 'ngx-tethys/core';
import { ThyButtonType } from '.';
export declare type buttonGroupSize = 'sm' | 'lg' | 'xs' | 'md';
export declare type buttonGroupType = 'outline-primary' | 'outline-default';
export declare class ThyButtonGroupComponent implements OnInit {
    private updateHostClassService;
    private elementRef;
    private initialized;
    private type;
    private size;
    set thySize(size: buttonGroupSize);
    set thyType(type: ThyButtonType);
    set thyClearMinWidth(value: string);
    _isButtonGroup: boolean;
    thyClearMinWidthClassName: boolean;
    constructor(updateHostClassService: UpdateHostClassService, elementRef: ElementRef);
    ngOnInit(): void;
    private setClasses;
}
