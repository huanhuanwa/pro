import { ElementRef, OnInit, EventEmitter } from '@angular/core';
import { NgControl } from '@angular/forms';
import { Mention, MentionSuggestionSelectEvent } from './interfaces';
import { ThyPopover, ThyPopoverConfig } from 'ngx-tethys/popover';
export declare class ThyMentionDirective implements OnInit {
    private elementRef;
    private thyPopover;
    private ngControl;
    private adapter;
    private openedSuggestionsRef;
    private _mentions;
    get mentions(): Mention<any>[];
    set mentions(value: Mention<any>[]);
    popoverConfig: ThyPopoverConfig;
    select: EventEmitter<MentionSuggestionSelectEvent<any>>;
    constructor(elementRef: ElementRef<HTMLElement>, thyPopover: ThyPopover, ngControl: NgControl);
    ngOnInit(): void;
    bindEvents(): void;
    onClick(event: Event): void;
    onInput(event: Event): void;
    private lookup;
    private openSuggestions;
    private closeSuggestions;
    private isEditable;
}
