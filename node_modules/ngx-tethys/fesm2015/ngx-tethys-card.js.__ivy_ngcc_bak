class ThyCardComponent {
    constructor() {
        this.thyCardClass = true;
        this.clearLeftRightPadding = false;
        this._thyDivided = false;
    }
    set thyHasLeftRightPadding(value) {
        this.clearLeftRightPadding = !coerceBooleanProperty(value);
    }
    set thyDivided(value) {
        this._thyDivided = coerceBooleanProperty(value);
    }
}
ThyCardComponent.decorators = [
    { type: Component, args: [{
                selector: 'thy-card',
                template: `
        <ng-content></ng-content>
    `
            },] }
];
ThyCardComponent.propDecorators = {
    thyCardClass: [{ type: HostBinding, args: ['class.thy-card',] }],
    clearLeftRightPadding: [{ type: HostBinding, args: ['class.thy-card--clear-left-right-padding',] }],
    _thyDivided: [{ type: HostBinding, args: ['class.thy-card--divided',] }],
    thyHasLeftRightPadding: [{ type: Input, args: ['thyHasLeftRightPadding',] }],
    thyDivided: [{ type: Input, args: ['thyDivided',] }]
};

class ThyCardContentComponent {
    constructor() {
        this.thyCardContentClass = true;
        this.scrollClassName = false;
        this._thySizeSm = false;
    }
    set thyScroll(value) {
        this.scrollClassName = coerceBooleanProperty(value);
    }
    set thySize(value) {
        this._thySizeSm = value === 'sm';
    }
    ngOnInit() { }
}
ThyCardContentComponent.decorators = [
