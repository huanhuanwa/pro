import { Directive, ElementRef, HostBinding, NgModule } from '@angular/core';
import { CommonModule } from '@angular/common';

const thyDropdown = 'thyDropdown';
const thyDropdownSplit = 'thyDropdownSplit';
class ThyDropdownDirective {
    constructor(elementRef) {
        this.elementRef = elementRef;
        this._isDropdownClass = true;
        this._isDropdownSplitClass = false;
        const attrs = Array.from(elementRef.nativeElement.attributes);
        if (attrs.find((item) => item.name === thyDropdownSplit.toLocaleLowerCase())) {
            this._isDropdownSplitClass = true;
        }
    }
}
ThyDropdownDirective.decorators = [
    { type: Directive, args: [{
                selector: `[${thyDropdown}],[${thyDropdownSplit}]`
            },] }
];
ThyDropdownDirective.ctorParameters = () => [
    { type: ElementRef }
];
ThyDropdownDirective.propDecorators = {
    _isDropdownClass: [{ type: HostBinding, args: ['class.thy-dropdown-toggle',] }],
    _isDropdownSplitClass: [{ type: HostBinding, args: ['class.thy-dropdown-toggle-split',] }]
};

class ThyDropdownModule {
}
ThyDropdownModule.decorators = [
    { type: NgModule, args: [{
                imports: [
                    CommonModule
                ],
                declarations: [
                    ThyDropdownDirective
                ],
                exports: [
                    ThyDropdownDirective
                ]
            },] }
];

/**
 * Generated bundle index. Do not edit.
 */

export { ThyDropdownDirective, ThyDropdownModule };
