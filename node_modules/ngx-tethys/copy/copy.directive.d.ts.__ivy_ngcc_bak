import { ElementRef, OnInit, ViewContainerRef, OnDestroy, EventEmitter } from '@angular/core';
import { TooltipService } from 'ngx-tethys/tooltip';
import { ThyNotifyService } from 'ngx-tethys/notify';
export interface ThyCopyEvent {
    isSuccess: boolean;
    event: Event;
}
export declare class ThyCopyDirective implements OnInit, OnDestroy {
    private document;
    tooltipService: TooltipService;
    private elementRef;
    private viewContainerRef;
    private notifyService;
    thyCopy: EventEmitter<ThyCopyEvent>;
    thyCopySuccessText: string;
    thyCopyTips: string;
    thyCopyContent: string | ElementRef | HTMLElement;
    constructor(document: any, tooltipService: TooltipService, elementRef: ElementRef<HTMLElement>, viewContainerRef: ViewContainerRef, notifyService: ThyNotifyService);
    ngOnInit(): void;
    private getContent;
    onClick(event: Event): void;
    ngOnDestroy(): void;
}
