import { ElementRef, ViewContainerRef, NgZone } from '@angular/core';
import { Overlay, ScrollDispatcher } from '@angular/cdk/overlay';
import { Platform } from '@angular/cdk/platform';
import { FocusMonitor } from '@angular/cdk/a11y';
import { ThyTooltipDirective } from './tooltip.directive';
import { ThyTooltipConfig } from './tooltip.config';
export declare class TooltipService {
    private overlay;
    private scrollDispatcher;
    private ngZone;
    private platform;
    private focusMonitor;
    private thyTooltipConfig;
    thyTooltipDirective: ThyTooltipDirective;
    constructor(overlay: Overlay, scrollDispatcher: ScrollDispatcher, ngZone: NgZone, platform: Platform, focusMonitor: FocusMonitor, thyTooltipConfig: ThyTooltipConfig);
    attach(elementRef: ElementRef, viewContainerRef: ViewContainerRef, trigger?: 'hover' | 'focus' | 'click'): void;
    detach(): void;
}
